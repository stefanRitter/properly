header.header(ng-controller="appHeaderCtrl")
  .header-logged-out(ng-hide="onPath('/pro') || isLoggedIn()")
    a.button-red(href="/join", ng-hide="onPath('/join')") Join
    a.button-gray.margin-left-sm(href="/login", ng-hide="onPath('/login')") Log in
    a.button-gray.header-pro-link(href="/pro") Rental owner?

  .header-logged-in.ng-hide(ng-show="isLoggedIn('tenant')") 
    //, ng-hide="onPath('/verify')")
    a.button-red(href="/favourites") &star;
    a(href="", ng-click="signout()") Sign Out

  .header-logged-in-pro.ng-hide(ng-show="onPath('/pro')")
    a(href="", ng-click="signout()") Sign Out
