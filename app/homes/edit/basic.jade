.center
  h2.italic.margin Edit Basic Information

  form.form(name="homeBasicForm")
    .form-group
      label Duration*
      input(type="checkbox" name="longRent" value="1")
      | Long rent
      input(type="checkbox" name="shortRent" value="1")
      | Short rent (&lt; 6 months)

    .form-group
      label Property type*
      select
        option Flat
        option House
        option Maisonette
        option Studio
        option Garden House
    
    .form-group
      label
        | Price per 
        strong month
        | *
      input(name="price", type="text", placeholder="Rent per month", ng-model="rentPM", required)
      br
      label Exc/Inc which Bills?*
      select
        option
        option Inc both Utilities and Council Tax
        option Exc Utilities but inc Council Tax
        option Inc Utilities but exc Council Tax
        option Exc both Utilities and Council Tax
    
    .form-group
      label Address
    
      label Postcode*
      input(name="postcode", type="text", placeholder="Postcode", ng-model="postcode", required)

      label Street
      input(name="address", type="text", placeholder="Street Address", ng-model="address", required)
    
    .form-group
      button.button-red.medium.home-edit-next(ng-click="verify()") Next
      br
      span.required * required

    .form-group
      .error {{notifier.error}}
      .notice {{notifier.notice}}
