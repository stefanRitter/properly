{
  "node": true,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  "camelcase": false,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": "single",
  "regexp": true,
  "undef": true,
  "unused": true,
  "strict": true,
  "trailing": true,
  "smarttabs": true,
  "globals": {
    /* ANGULAR */
    "angular"     : false,
    "inject"      : false,
    
    /* MOCHA */
    "describe"    : false,
    "it"          : false,
    "before"      : false,
    "beforeEach"  : false,
    "after"       : false,
    "afterEach"   : false,
    "expect"      : false
  },

  "maxparams": 10,
  "maxdepth": 4,
  "maxstatements": 20,
  "maxlen": 200,
  "maxcomplexity": 7
}
