.feedback-popop
.feedback-button
  position fixed

.feedback-button
  @extend .composite-layer
  z-index 2000
  bottom 1em
  right 1em
  font-weight 400
  font-size 22px
  text-align center
  line-height 1
  cursor pointer
  width 24px
  height 24px
  padding 4px
  background White
  border 2px solid Gray
  color Gray
  border-radius 50%
  @media phone
    bottom 1.5em
  @media typeheight
    display none

.feedback-popop
  display none
  z-index 2001
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,0.5)
  &.show
    display block

.feedback-form
  position absolute
  left 50%
  top 0
  margin-left -160px
  background White
  text-align center
  width 320px
  height 480px
  .form
    textarea
      resize none
      width 285px
      height 120px

.feedback-close
  position absolute
  top -10px
  right 6px
  cursor pointer
  font-weight 600
  font-size 30px
