.header
  @extend .composite-layer
  z-index 1000
  display block
  position fixed
  top 0
  left 0
  width 100%

.header-spacer
  height 40px

.header-logo
  float left
  margin 0.2em 10px
  width 40px
  img
    width 100%

.header-pro-link
  margin 0 2em 0 1em
  color Black
  background-color LightGray
  border 1px solid Gray

.header-logged-in
.header-logged-out
.header-logged-in-pro
  float right
  margin 0.3em

.header-logged-out
  @media phablet
    .button-red
    .button-gray
      padding 0.5em 1em

.header-dropdown-toggle
  @extend .button-lightgray
  margin 0 2em 0 0.3em
  display inline-block
  min-width 81px

.header-dropdown
  margin-left 120px
  width 138px
  background-color LightGray
  overflow hidden
  height 0
  transition height 0.2s
  border-bottom-right-radius 8px
  border-bottom-left-radius 8px
  a
    display inline-block
    margin 10px 15px
  &.show
    height 165px

.header-logged-in-pro
  .header-dropdown-toggle
    margin-left 118px
  .header-dropdown
    &.show
      height 80px
