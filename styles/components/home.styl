.home
  height 100%
  width 100%
  background url('img/homepage.jpg')
  background-size cover
  color White
  position relative

.home-content
  padding-top 120px
  margin-left 10%
  @media phone
    padding-top 90px
    margin 0 10px
    h1
      font-size 1.7em

.home-search-button
  font-size 1.2em
  letter-spacing 1px
  text-transform uppercase
  padding 0.5em 3em

.home-about-us
  width 100%
  height 100%
  h1
    padding 2em

.home-scroll-for-more
  position absolute
  bottom 10px
  left 0
  width 100%
  text-align center

.home-arrow-down
  width 0
  height 0
  border-left 8px solid transparent
  border-right 8px solid transparent
  border-top 8px solid White
  display inline-block
